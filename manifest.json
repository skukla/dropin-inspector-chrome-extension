{
  "manifest_version": 3,
  "name": "Dropin Inspector",
  "version": "2.4.0",
  "description": "Real-time explorer for Adobe Commerce dropin blocks and slots",
  "permissions": ["activeTab", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Dropin Inspector"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
